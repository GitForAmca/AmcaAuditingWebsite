@model AMCAAuditing.Models.Candidate_Data_PL
@{
    ViewBag.Title = @Model.PageTitle;
    ViewBag.PageTitle = @Model.PageTitle;
    ViewBag.Keyword = @Model.Keyword;
    ViewBag.Description = @Model.MetaDescription;
    ViewBag.PageURL = "https://amcaauditing.com/" + @Model.PageURL;
    ViewBag.Career = "active";
    ViewBag.ogImageUrl = "https://amcaauditing.com/img/img1.svg";
}
<section>
    <div class="row divider-banner">
        <div class="container">
            <div class="col-md-6">
                <h1 class="h1Heading">
                    @Model.JobTitle
                </h1>
                <ul class="broudcrumb">
                    <li>
                        <a href="@Url.Action("Index", "Pages")">Home</a>
                    </li>
                    <li>
                        Career
                    </li>
                    <li>
                        Accounting
                    </li>
                </ul>
            </div>
        </div>
        <div class="bannerimg-bg"></div>
    </div>
</section>
<section>
    <div class="row padding-section">
        <div class="container">
            <div class="col-md-12">
                @Html.Raw(@Model.JobContent)
                @using (Html.BeginForm("SubmitJob", "ExperiencedCareerRoles", FormMethod.Post, new { @class = "" }))
                {
                    @Html.HiddenFor(model => model.JobTitle, new { @class = "form-control forminput-theme", @readonly = "readonly", @ViewBag.Value })
                    <input type="submit" class="btn btn-theme btn-color-1 Mtop-35" value="Apply for this position">
                }
            </div>
        </div>
    </div>
</section>

@Scripts.Render("~/bundles/jquery")

<script type="text/javascript">
$(document).ready(function () {
    window.addEventListener('popstate', function (event) {
        location.reload();
    }, false);
    $(this).scrollTop(0);
})
</script>