@{
    ViewBag.Title = "Mission Vision | AMCA Auditing Dubai, UAE";
    ViewBag.PageTitle = "Mission & Vision";
    ViewBag.Keyword = "audit firm dubai, accounting firm in dubai, audit services in dubai";
    ViewBag.Description = "Since we began operations in 2008, our organization has seen a steady & progressive growth.";
    ViewBag.Company = "active";
    ViewBag.ogImageUrl = "https://amcaauditing.com/img/Values.jpg";
}

<section>
    <div class="row divider-banner">
        <div class="container">
            <div class="col-md-6">
                <h1 class="h1Heading">
                    @ViewBag.PageTitle
                </h1>
                <ul class="broudcrumb">
                    <li>
                        <a href="@Url.Action("Index", "Pages")">Home</a>
                    </li>
                    <li>
                        Mission & Vision
                    </li>
                </ul>
            </div>
        </div>
        <div class="bannerimg-bg"></div>
    </div>
</section>
<section>
    <div class="row about padding-section">
        <div class="container">
            <div class="col-md-12">
                <div class="col-md-12 about-company">
                    <div class="row mobile-order">
                        <div class="col-md-6 order-2">
                            <p class="font-22 text-color">
                                AMCA Auditing and Business Advisors is an auditing and consulting firm, based in Dubai, United Arab Emirates. We provide a wide range of assurance services to companies in the private and public sector.
                            </p>
                            <p class="font-22 text-color">
                                We are proud to be one of the professional auditing firms in United Arab Emirates, and we know that our stability, growth and success are strongly correlated to our commitment to excellence and professional services we provide to our clients.
                            </p>
                        </div>
                        <div class="col-md-offset-1 col-md-5 order-1">
                            <p class="tagline"><span>Who we are</span></p>
                            <h2 class="middle-heading">
                                AMCA Auditing a company with an innovative future!
                            </h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="row padding-section">
        <div class="container">
            <div class="col-md-12">
                <h2 class="middle-heading">
                    Our Vision
                </h2>
                <p>
                    Since we began operations in 2008, our organization has seen a steady & progressive growth. Beginning with 3, our organization today stands at 45+ dedicated employees. By the end of 2020, we plan to have offices in four other GCC nations & a 200+ employees strong family.
                </p>
                <h2 class="middle-heading">
                    Our Mission
                </h2>
                <p>
                    Growth for us is not expressed only in graphs & charts, but, also in the smiles we were able to bring to faces. We at AMCA believe in empowering & nurturing talent. Through our "Corporate Social Responsibility" initiative Trustworthy Human Welfare Foundation, we provide free education to underprivileged children as we believe they are the leaders of tomorrow. By providing them career counselling sessions, we ensure that they follow their passion & touch glory in whichever field they choose.
                </p>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="row padding-section">
        <div class="container mission-vision">
            <div class="col-md-5">
                <img src="~/img/Values.jpg" class="img-responsive" alt="Values"/>
            </div>
            <div class="col-md-offset-1 col-md-6 right-add resp-margin">
                <p class="tagline"><span>Our Values</span></p>
                <h2 class="middle-heading">
                    What We Believe In
                </h2>
                <h4 class="box-top">
                    Integrity
                </h4>
                <p>
                    Performing the task at hand with utmost dedication & to the best of our abilities.
                </p>
                <h4>
                    Confidentiality
                </h4>
                <p>
                    Taking all steps to ensure confidentiality of client data.
                </p>
                <h4>
                    Timely
                </h4>
                <p>
                    Always delivering on promised time. For this purpose, we provide all our clients a real time file tracking facility on our website.
                </p>
            </div>
            <div class="boxes"></div>
        </div>
        <div class="background"></div>
    </div>
</section>
<section>
    <div class="row padding-section pages-wrap">
        <div class="container">
            <div class="col-md-12">
                <p class="tagline"><span>clients</span></p>
                <h2 class="middle-heading">
                    Our Clients Are Entrepreneurs
                    <span>and Companies</span>
                </h2>
            </div>
            <div class="col-md-12">
                <div class="owl-carousel owl-theme clients-carousel">
                    <div class="item">
                        <img src="img/ded.png" class="img-responsive" alt="Dubai Economy" title="Dubai Economy">
                    </div>
                    <div class="item">
                        <img src="img/fta.png" class="img-responsive" alt="FTA" title="FTA">
                    </div>
                    <div class="item">
                        <img src="img/dsoa-logo.png" class="img-responsive" alt="Dubai Silicon Oasis Authority" title="Dubai Silicon Oasis Authority">
                    </div>
                    <div class="item">
                        <img src="img/dmcc.png" class="img-responsive" alt="DMCC" title="DMCC">
                    </div>
                    <div class="item">
                        <img src="img/dafza.png" class="img-responsive" alt="Dafza" title="Dafza">
                    </div>
                    <div class="item">
                        <img src="img/jafza.png" class="img-responsive" alt="Jafza" title="Jafza">
                    </div>
                    <div class="item">
                        <img src="img/difc.png" class="img-responsive" alt="DIFC" title="DIFC">
                    </div>
                    <div class="item">
                        <img src="img/DWC.png" class="img-responsive" alt="DWC" title="DWC">
                    </div>
                    <div class="item">
                        <img src="img/dtec.png" class="img-responsive" alt="DTEC" title="DTEC">
